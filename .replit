modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["jq"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Integrated Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Citizen Map DB Server"

[[workflows.workflow]]
name = "Database Sync"
author = 39093361
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node db-sync.js"

[[workflows.workflow]]
name = "Integrated Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node updated-index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Citizen Map DB Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node citizen-map/db-integrated-server.js"
waitForPort = 5001

[deployment]
run = ["sh", "-c", "npm install node-fetch && node index.js"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
