modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["jq", "solana-cli", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Citizen Map Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VSR API Server Fixed"

[[workflows.workflow]]
name = "Database Sync"
author = 39093361
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node db-sync.js"

[[workflows.workflow]]
name = "Citizen Map Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd citizen-map && node simple-server.cjs"
waitForPort = 5000

[[workflows.workflow]]
name = "VSR API Server Fixed"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node vsr-api-server-fixed.cjs"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "npm install node-fetch && node index.js"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
